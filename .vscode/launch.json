{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: 运行当前文件 (自动添加src路径)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}